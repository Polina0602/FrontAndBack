@page "{id}"
@model FrontAndBack.Pages.Players.DeleteModel
@{
    ViewData["Title"] = "Delete";
    ViewData["ShowButtons"] = false;

}
<h1 class="text-center">Delete confirmation</h1>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <partial name="_DisplayPlayerPartial" model = "Model.Player" view-data = "ViewData"/>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4>Player ID: <span class="text-primary">@Model.Player.ID</span></h4><hr />
                <h4>Player Email: <span class="text-primary">@Model.Player.Email</span></h4><hr />
                <h4>Role: <span class="text-primary">@Model.Player.Role</span></h4><hr />
                <h4>Player ID: <span class="text-primary">6</span></h4><hr />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
          <h5>Are you sure want to delete player @Model.Player.Name?</h5>
            <form>
                <button type="submit" class="btn btn-danger">Yes</button>
                <a class="btn btn-danger" asp-page="/Players/players">No</a>
            </form>
        </div>
    </div>
</div>


