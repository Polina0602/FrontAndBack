@page "{id}"
@model FrontAndBack.Pages.DetailsModel
@{
    ViewData["Title"] = "Player details";
    var photoPath = $"/images/{Model.player.PhotoPath ?? "/noimage.png"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.player.Name</h1>
            </div>
            
            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">
                            Player ID: @Model.player.ID
                        </h4><hr />
                        <h4 class="cardTextLeftFloating">
                            Email: @Model.player.Email
                        </h4><hr />
                        <h4 class="cardTextLeftFloating">
                            Role: <span>@Model.player.Role</span>
                        </h4><hr />
                    </div>
                    <div class="col col-lg-3">
                        <div style="border-right: 1px solid rgba(0, 0, 0, .1)">
                            <img class="card-image-top imageThumbnail border border-primary" style="background-color:#dle7ff;" src="@photoPath" asp-append-version="true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color:rgba(0,0,0, .25);">
                            <a asp-page="Players" class="btn btn-success buttonShadow">Back</a>
                            <a href="#" class="btn btn-primary buttonShadow">Edit</a>
                            <a href="#" class="btn btn-danger buttonShadow">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
