@model Player

@{
    var photoPath = $"/images/{Model.PhotoPath ?? "/noimage.png"}";
    var showButtons = (bool)ViewData["ShowButtons"];
}
        <div class="card-deck">
            <div class="card m-3 cardBoxShadow">
                <div class="card-header text-center cardHeaderStyle">
                    <h3>@Model.Name</h3>
                </div>
                <div class="text-center cardBodyStyle">
                    <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version = "true"/>
                </div>
        @if (showButtons)
        {
            <div class="card-deck-footer text-center">
                <a asp-page="/Players/Details" asp-route-Id="@Model.ID" class="btn btn-success m-1 buttonShadow">View</a>
                <a asp-page="/Players/Edit" asp-route-Id="@Model.ID" class="btn btn-primary m-1 buttonShadow">Edit</a>
                <a asp-page="/Players/Delete" asp-route-Id="@Model.ID" class="btn btn-danger m-1 buttonShadow">Delete</a>
            </div>
        }
    </div>
        </div>
